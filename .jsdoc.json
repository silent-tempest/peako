{
  "tags": {
    "dictionaries": [
      "jsdoc", "closure"
    ],

    "allowUnknownTags": false
  },

  "source": {
    "includePattern": ".js$",
    "excludePattern": "node_modules/|docs|(?:^|\\/|\\\\)_"
  },

  "plugins": [
    "plugins/markdown",
    "./.jsdoc-template/plugins/custom-tags.js"
  ],

  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true,
    "useLongnameInNav": false,
    "showInheritedInNav": true,
    "outputSourceFiles": true
  },

  "opts": {
    "destination": "./.test-docs",
    "encoding": "utf8",
    "private": false,
    "recurse": true,
    "template": "./.jsdoc-template"
  }
}
